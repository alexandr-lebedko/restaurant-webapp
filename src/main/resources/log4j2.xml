<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{[dd-mm-yyyy HH:mm:ss]} [%t] %-5level %c{-2} - %msg%n"/>
        </Console>
        <File name="MyFile" fileName="C:/restaurant-2.0/log/all.log" immediateFlush="false" append="false">
            <PatternLayout pattern="%d{[dd-mm-yyyy HH:mm:ss]} [%t] %-5level %c{-2} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="MyFile"/>
        </Root>
    </Loggers>
</Configuration>
